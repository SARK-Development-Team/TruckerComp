    <script defer src="../../../public/scripts/login.js"></script>
    <link href="../../../public/styles/login.css" rel="stylesheet">


    <main class="dark" style="padding-top: 6vw;">
        <section class="login-card">
            <p class="card-heading">Log in</p>
            <form action="/login" method="POST" >
                <div class="card-body">
                    <label for="email">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="Enter Email"
                    >
                    <label for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Enter Password"
                    >
                    <button id="btn-submit" type="submit" >Submit</button>
                </div>
            </form>
        </section>
        <p id="bottom-line">Not registered? <a href="register">Click here to register.</a></p>
    </main>
