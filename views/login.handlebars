    <script defer src="../../../public/scripts/login.js"></script>
    <link href="../../../public/styles/users.css" rel="stylesheet">


    <main class="login-card dark">
        <div class="card-heading">Log in</div>
        <form action="/login" method="POST" >
            <div class="card-body">
                <label for="email">Email</label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    placeholder="Enter Email"
                >
                <label for="password">Password</label>
                <input
                    type="password"
                    id="password"
                    name="password"
                    placeholder="Enter Password"
                >
                <button id="btn-submit" type="submit" >Submit</button>
        </div>

        
    </main>
    <p id="bottom-line">Not registered? <a href="register">Click here to register.</a></p>
