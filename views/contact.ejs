<link href="public/styles/contact.css" rel="stylesheet">
<script src="public/scripts/contact.js"></script>

<section id="main" class="dark">
    <div class="two-column-section">
        <div class="left-side">
            <h2><b>Contact us</b></h2>
            <h4><b>Please answer these questions, and we'll get back to you ASAP.</b></h4>
            <p><b>Alternatively, you can send us an email or text to the following</b></p>
            <p>wc@sarkinsurance.com</p>
            <p>415-XXX XXXX</p>
        </div>
        <div class="light">
            <form>
                <input type="text" id="name" name="name" placeholder="Name">
                <input type="text" id="email" name="email" placeholder="Email">
                <input type="text" id="phone" name="phone" placeholder="Phone">
                <input list="dropdown" id="type" type="text" placeholder="Type of insurance">
                <datalist name="type" id="dropdown">
                    <!-- <option value="" selected disabled></option> -->
                    <option value="Workerâ€™s Compensation"></option>
                    <option value="Homeowner's Insurance"></option>
                    <option value="Commercial Auto"></option>
                    <option value="Business Insurance"></option>
                </datalist>
                <textarea id="comment" rows="5" placeholder="Please provide more information"></textarea>
                <button id="submit-button" onclick="sendContact(event)">Submit</button>
            </form>
        </div>
    </div>

</section>